<!DOCTYPE html>
<html>
<head>
  <title>Brainforest</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id = "header">
	<h1>amnotazon</h1>
	<div id = "user_panel">
		<% if current_user %>
			Signed in as <%= current_user.nick %> | <%= link_to "Logout", session_path("current"), :method => :delete %>
		<% else %>
			<%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
		<% end  %>
	</div>
</div>

<% if flash[:notice] %>
	<p id = "notice">
		<%= flash[:notice] %>
	</p>
<% end %>
<% if flash[:alert] %>
	<p id = "alert">
		<%= flash[:alert] %>
	</p>
<% end %>
<%= yield %>

</body>
</html>
